<oeiKnapperGui:TabContentControl x:Class="OEIKnapperGUI.Controls.Homepage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OEIKnapperGUI.Controls"
             xmlns:oeiKnapperGui="clr-namespace:OEIKnapperGUI"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d"
             TabHeader="Welcome"
             d:DesignHeight="600" d:DesignWidth="800">
    <oeiKnapperGui:TabContentControl.Resources>
        <DataTemplate x:Key="toolDisplayTemplate" DataType="{x:Type local:ToolInformation}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            
                <Button Grid.Row="1" Height="40" Width="125" Margin="10,0" Content="{Binding Name}" IsEnabled="{Binding IsEnabled}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Description}"/>
            </Grid>
        </DataTemplate>
        
    </oeiKnapperGui:TabContentControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center">
            Welcome to OEIKnapper. This tool will let you view and dump content specific to Obsidian Entertainment games.&#10;
            To get started, select an editor below.
        </TextBlock>
        <ContentControl Grid.Row="1" Content="{Binding Tools}"/>
        <TextBlock Grid.Row="2" VerticalAlignment="Bottom" TextWrapping="Wrap" TextAlignment="Center"> 
            Want to help extend the capabilities of OEIKnapper? Check out the <Hyperlink NavigateUri="https://github.com/jackburkhardt/ObsdianKnapper">GitHub repository</Hyperlink> for in-progress features. 
        </TextBlock>
    </Grid>
</oeiKnapperGui:TabContentControl>
